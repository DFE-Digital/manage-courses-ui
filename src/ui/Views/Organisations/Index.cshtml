@model OrganisationListViewModel

@{
    ViewBag.Title = "Organisations";
    Layout = "_Layout";
}

<main role="main" class="govuk-main-wrapper" id="main-content">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            @Html.Partial("~/Views/Courses/Shared/RequestAccessSuccess.cshtml")
            <h1 class="govuk-heading-xl">
                Organisations
            </h1>
            @foreach (var organisation in Model.Oganisations)
            {
            <h3 class="govuk-heading-m">
                <a href="@Url.Action("Index", "courses", new {ucasCode = organisation.UcasCode})" class="govuk-link">@organisation.OrganisationName</a>
                <span class="govuk-body govuk-!-font-weight-regular govuk-!-display-block">@organisation.TotalCourses courses</span>
            </h3>     
            }
        </div>
    </div>
</main>
