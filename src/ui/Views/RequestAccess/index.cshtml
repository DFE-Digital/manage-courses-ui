@model RequestAccessViewModel
@{
    Layout = "_Layout";
}

<div class="grid-row">
    <div class="column-two-thirds">
        <h1 class="heading-large">Request access for someone</h1>
        <p>You can request a DfE Sign-in account for others who manage your courses.</p>
        @using (Html.BeginForm("Index", "RequestAccess", FormMethod.Post))
        {
            <div class="form-group @((ViewData.ModelState["FirstName"] != null && ViewData.ModelState["FirstName"].Errors.Any()) ? "form-group-error" : "")">
                @Html.LabelFor(m => m.FirstName, new { @class="form-label" })
                @Html.ValidationMessageFor(m => m.FirstName, "", new { @class="error-message" })
                @Html.TextBoxFor(m => m.FirstName, new { @class= "form-control" })
            </div>

            <div class="form-group @((ViewData.ModelState["LastName"] != null && ViewData.ModelState["LastName"].Errors.Any()) ? "form-group-error" : "")">
                @Html.LabelFor(m => m.LastName, new { @class="form-label" })
                @Html.ValidationMessageFor(m => m.LastName, "", new { @class="error-message" })
                @Html.TextBoxFor(m => m.LastName, new { @class="form-control" })
            </div>
            <div class="form-group @((ViewData.ModelState["EmailAddress"] != null && ViewData.ModelState["EmailAddress"].Errors.Any()) ? "form-group-error" : "")">
                @Html.LabelFor(m => m.EmailAddress, new { @class="form-label" })
                @Html.ValidationMessageFor(m => m.EmailAddress, "", new { @class="error-message" })
                @Html.TextBoxFor(m => m.EmailAddress, new { @class="form-control" })
            </div>
            <div class="form-group @((ViewData.ModelState["Organisation"] != null && ViewData.ModelState["Organisation"].Errors.Any()) ? "form-group-error" : "")">
                @Html.LabelFor(m => m.Organisation, new { @class="form-label" })
                @Html.ValidationMessageFor(m => m.Organisation, "", new { @class="error-message" })
                @Html.TextBoxFor(m => m.Organisation, new { @class="form-control" })
            </div>
            <div class="form-group @((ViewData.ModelState["Reason"] != null && ViewData.ModelState["Reason"].Errors.Any()) ? "form-group-error" : "")">
                @Html.LabelFor(m => m.Reason, new { @class="form-label" })
                @Html.ValidationMessageFor(m => m.Reason, "", new { @class="error-message" })
                @Html.TextAreaFor(m => m.Reason, new { @class="form-control form-control-3-4" })
            </div>
            <div class="form-group">
                <input type="submit" class="button" value="Request access"/>
            </div>
        }
    </div>
</div>
